<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#B3E5FC"
                android:centerColor="#E1F5FE"
                android:endColor="#FFFFFF"
                android:angle="45"/>
            <corners android:radius="24dp"/> <!-- Softer rounded corners -->
        </shape>
    </item>

    <!-- Subtle shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- Very light shadow for depth -->
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Border for definition -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#B3E5FC"/> <!-- Light blue border for a soft look -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
</layer-list>
