<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"

    android:elevation="8dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Small Image at the Top -->
    <ImageView
        android:id="@+id/top_image"
        android:layout_width="150dp"
        android:layout_height="121dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Top image"
        android:scaleType="centerCrop"
        android:src="@drawable/image" />

    <!-- Number EditText -->
    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_bg"
        android:focusableInTouchMode="true"
        android:hint="Number"
        android:inputType="number"
        android:padding="14dp"
        android:textColor="#333333"
        android:textSize="16sp"
        android:transitionName="field_number" />

    <!-- Pseudo EditText -->
    <EditText
        android:id="@+id/editTextPseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_bg"
        android:focusableInTouchMode="true"
        android:hint="Pseudo"
        android:inputType="text"
        android:padding="14dp"
        android:textColor="#333333"
        android:textSize="16sp"
        android:transitionName="field_pseudo" />

    <!-- Longitude EditText -->
    <EditText
        android:id="@+id/editTextLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_bg"
        android:focusableInTouchMode="true"
        android:hint="Longitude"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColor="#333333"
        android:textSize="16sp"
        android:transitionName="field_longitude" />

    <!-- Latitude EditText -->
    <EditText
        android:id="@+id/editTextLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_bg"
        android:focusableInTouchMode="true"
        android:hint="Latitude"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColor="#333333"
        android:textSize="16sp"
        android:transitionName="field_latitude" />

</LinearLayout>
